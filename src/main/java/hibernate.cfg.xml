<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- The JDBC driver of your database -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- Indicate the database to generate suitable SQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- The JDBC URL to the database instance -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/escuela5?serverTimezone=UTC</property>
        <!-- The database username -->
        <property name="hibernate.connection.username">root</property>
        <!-- The database password -->
        <property name="hibernate.connection.password">root</property>
                <!-- XML mapping file -->
        <mapping class="pkg_Escuela.Aula"/>
        <mapping class="pkg_Escuela.Alumno"/>
        <mapping class="pkg_Escuela.Profesor"/>
    </session-factory>
</hibernate-configuration>
